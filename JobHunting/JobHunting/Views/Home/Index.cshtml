@{
    ViewData["Title"] = "首頁";
}

@section Styles
{
    <style>
        td{
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }
    </style>
}

<div class="pt-2" id="app1">
    <!-- Header-->
    <header class="bg-warning py-5">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center text-white">
                @* <h1 class="display-4 fw-bolder">Home Page</h1> *@
                <label style="font-size:700%;">小鴨<img src="~/gif/9e25a15f2aae61fb18f7782b65b6baf7.gif" style="width:30%" />上工</label>
            </div>
        </div>
    </header>
    <br />
    <br />
    @* 搜尋列 *@
    <div class="container border border-2 col-10 mb-4">
        <div class="row calculator-dropdown py-md-2">
            <div class="col-sm-2">
                <label class="calculator-dropdown-label" for="apiChoice">地區篩選</label>
                <br>
                <select v-model="city" v-on:change="getArea">
                    <option v-for="(item,index) in cityList" :key="item.CityName" :value="item.CityName">{{item.CityName}}</option>
                </select>
                <select v-model="zipCode">
                    <option v-for="item in area" :value="item.zipCode">{{item.AreaName}}</option>
                </select>
            </div>
            <div class="col-sm-3">
                <label class="calculator-dropdown-label" for="">選擇薪資範圍</label>
                <input type="number" value="0" v-model="salary" min="0" step="1000" required />
            </div>
            <div class="col-sm-4">
                <label class="calculator-dropdown-label" for="">職業類別</label>
                <select v-model="classNumber">
                    <optgroup v-for="(item,index) in companyClassList" :label="item.companyCategoryName">
                        <option v-for="tag in companyClassList[index].companyClassObj" :value="tag.companyClassId">{{tag.companyClassName}}</option>
                    </optgroup>
                </select>
            </div>
            <div class="col-sm-1 pt-3">
                <button class="btn btn-warning text-light" v-on:click="clearSearch()">清空</button>
            </div>
        </div>
        <div class="row py-md-2">
            <div class="col-10 mb-0">
                <input type="text" class="form-control" placeholder="請輸入關鍵字" v-on:keyup.lazy="filterOpenings" v-model.trim="filter" />
            </div>
            <div class="col-2 mb-0">
                <button class="btn btn-warning text-light" v-on:click="filterOpenings">搜尋</button>
            </div>
        </div>
    </div>

    <div class="row" style="width:95%">
       <div class="col-sm-2 row">
            <div class="col-sm-6 ms-auto">
                <label>第</label>
                <input style="width:3vh;" v-model.number.trim="currentPage" />
                <label>頁</label>
            </div>
       </div>
        <div class="col-sm-4">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item" v-on:click="turnPagePrevious()">
                        <button type="button" class="page-link" aria-label="Previous" v-bind:disabled="isturnPagePreviousDisabled">
                            <span aria-hidden="true">&laquo;</span>
                        </button>
                    </li>
                    <li v-for="page in totalPage" class="page-item" v-on:click="turnPage(page)">
                        <button type="button" class="page-link">{{page}}</button>
                    </li>
                    <li class="page-item" v-on:click="turnPageNext()">
                        <button type="button" class="page-link" aria-label="Next" v-bind:disabled="isturnPageNextDisabled">
                            <span aria-hidden="true">&raquo;</span>
                        </button>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="col-sm-2 ms-auto row">
            <div class="col-sm-10">
                <label>共</label>
                <input style="width:3vh;" v-model.number.trim="perpage" />
                <label>筆職缺</label>
            </div>
        </div>
    </div>

    @* 履歷清單 *@
    <div class="container">
        <table class="table table-striped table-hover">
            <thead class="table-warning" align="center">
                <tr>
                    <td>職稱</td>
                    <td>公司名稱</td>
                    <td>地區</td>
                    <td>工作內容</td>
                    <td>薪資條件</td>
                    <template v-if="memberRole=='candidate'">
                        <td>應徵 / 儲存</td>
                    </template>
                    <template v-else>
                        <td></td>
                    </template>
                </tr>
            </thead>
            <tbody align="center">
                <tr v-for="(item,index) in openings">
                    @* <td><a target="_blank" :href=`${baseAddress}/Company/ResumeIntro/${item.opeingID}`>{{item.title}}</a></td> *@
                    <td>{{item.title}}</td>
                    <td>{{item.companyName}}</td>
                    <td>{{item.address}}</td>
                    <td>{{item.description}}</td>
                    <td>{{item.salaryMin}}~{{item.salaryMax}}</td>
                    <td>
                        <button type="button" class="btn btn-info text-light" v-on:click="showOpeningDataModal(item.openingId)">
                            詳細
                        </button>
                            <template v-if="memberRole=='candidate'">
                                <template v-if="item.likeYN == false">
                                    <button class="btn btn-danger" v-on:click="addFavorite(item.openingId)">儲存</button>
                                </template>
                                <template v-else>
                                    <button class="btn btn-outline-danger" v-on:click="deleteFavorite(item.openingId)">已存</button>
                                </template>
                            </template>
                    </td>
                </tr>
            </tbody>
        </table>

