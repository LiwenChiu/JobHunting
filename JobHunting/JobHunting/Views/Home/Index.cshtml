                        <template v-for="(titleClass,index) in openingModal.titleClassName">
                            <template v-if="index + 1 == openingModal.titleClassName.length">
                                <button class="astext h5">{{titleClass}}</button>
                            </template>
                            <template v-else>
                                <button class="astext h5">{{titleClass}}</button>、
