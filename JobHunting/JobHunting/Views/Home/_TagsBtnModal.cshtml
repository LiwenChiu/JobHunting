<!-- Button trigger modal -->
<button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#tagsModal">
    選擇標籤 <span class="badge bg-secondary">{{TagCheckedResume.length}}</span>
    <span class="visually-hidden">標籤數量</span>
</button>
<button type="button" class="btn btn-outline-danger" v-on:click="TagCheckedResume = []">清除</button>

<!-- Modal -->
<div class="modal fade" id="tagsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title">能力標籤</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div v-for="item in TagClasses">
                    <button class="astext overcard" type="button" data-bs-toggle="collapse" v-bind:data-bs-target="ReturnhashtagID(item)" aria-expanded="false" v-bind:aria-controls="item.TagClass">{{item.TagClass}}</button>
                    <div class="collapse" v-bind:id="item.TagClass">
                        <div class="row">
                            <div class="col-4" v-for="Tag in filterTagClass(item.TagClassID)">
                                <input type="checkbox" v-bind:id="changeTagNameTo(Tag.TagName)" v-bind:value="Tag.TagID" v-model="TagCheckedResume" />
                                <label v-bind:for="changeTagNameTo(Tag.TagName)">{{Tag.TagName}}</label>
                            </div>
                        </div>
                    </div>
                    <hr />
                </div>
                @* 選擇的TagID:{{TagCheckedResume}} *@
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" v-on:click="TagCheckedResume = []">清除</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">確定</button>
            </div>
        </div>
    </div>
</div>