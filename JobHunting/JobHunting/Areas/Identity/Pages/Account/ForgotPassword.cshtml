@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "忘記密碼";
}


<div class="row justify-content-center">
    <h2 class="text-center">@ViewData["Title"]</h2>
    <h2 class ="text-center">請輸入電子郵件</h2>
    <div class="col-md-4">
        <form method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control rounded-pill bg-danger bg-opacity-25" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">電子信箱</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="w-30 btn btn-warning rounded-pill mb-3">重設密碼</button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
