<div class="container py-2" id="app">
    <div class="container-fluid row py-2">
            <label class="form-label">關鍵字搜尋：</label>
            <input type="text" class="form-control" v-model="filter" placeholder="請輸入篩選關鍵字" v-on:keyup="filterCandidateList" />
        </div>
    <table class="table text-center table-striped table-hover">
        <thead>
            <tr>
                <td>求職者ID</td>
                <td>姓名</td>
                <td>性別</td>
                <td>學歷</td>
                <td>地區</td>
            </tr>
        </thead>
        <tbody id="CandidateList">
            <tr v-for="item in candidatelist" class="overcard">
                <td>{{item.candidateID}}</td>
                <td>{{item.name}}</td>
                <td>{{gender(item.sex)}}</td>
                <td>{{item.degree}}</td>
                <td>{{item.address}}</td>
            </tr>
        </tbody>
    </table>
