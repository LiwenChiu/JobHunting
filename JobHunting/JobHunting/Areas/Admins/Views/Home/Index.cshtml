@{
    ViewData["Title"] = "管理者中心";
}

@section Styles {
    <link href="~/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" asp-append-version="true" />
    <style>

    </style>
}

<table class="table table-striped table-hover">
    <thead class="table-primary">
        <tr>
            <td>ProduceID</td>
            <td>ProduceName</td>
            <td>SupplierID</td>
            <td>CategoryID</td>
            <td>QuantityPerUnit</td>
            <td>UnitPrice</td>
            <td>UnitInStock</td>
            <td>UnitOnOrder</td>
            <td>ReorderLevel</td>
            <td>Discontinued</td>
        </tr>
    </thead>
</table>

@section Scripts {
    <script src="~/lib/datatables/js/jquery.datatables.min.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/fixedheader/3.3.2/js/dataTables.fixedHeader.min.js"></script>
    <script>
        $(document).ready(function () {
            $("table").dataTable({
                ajax: {
                    type: "GET",
                    url: "/Products/IndexJson",
                    dataSrc: function (data) {
                        return data;
                    }
                },
                columns: [
                    { "data": "productId", "width": "10%" },
                    { "data": "productName", "width": "10%" },
                    { "data": "supplierId", "width": "10%" },
                    { "data": "categoryId", "width": "10%" },
                    { "data": "quantityPerUnit", "width": "10%" },
                    { "data": "unitPrice", "width": "10%" },
                    { "data": "unitsInStock", "width": "10%" },
                    { "data": "unitsOnOrder", "width": "10%" },
                    { "data": "reorderLevel", "width": "10%" },
                    { "data": "discontinued", "width": "10%" },
                ],
                fixedHeader: {
                    header: true
                },
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.1.3/i18n/zh-HANT.json',
                }
            });
        });
    </script>
}