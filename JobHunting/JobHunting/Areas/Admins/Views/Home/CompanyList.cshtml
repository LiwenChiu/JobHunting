@section Scripts 
{
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script>
        Vue.createApp({ 
            data() {
                return {
                    companylist:[]
                }
            },
            methods: {
                CompanyListData: function () {
                    // alert("AAA");
                    fetch("/Admins/Home/IndexJson", {
                        method:"GET"
                    }).then(response => {
                        return response.json();
                    }).then(data => {
                        return this.companylist=data
                    }).catch(err => { 
                        alert(JSON.stringify(err))
                    })
                }
            },
            mounted() { this.CompanyListData() },
        }).mount("#app");
    </script>
}