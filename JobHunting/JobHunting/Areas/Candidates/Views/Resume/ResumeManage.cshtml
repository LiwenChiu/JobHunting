                    Autobiography:"",
                    hopeaddress:"",
                    candidateName:"",
                    candidateBirthday:"",
                    candidatePhone:"",
                    candidateDegree:"",
                    candidateEmail:"",
                    candidateEmploymentStatus:"",
                    timeR: "",
                    ReleaseYN:false,

                    TagClasses: [
                        { TagClassID: 1, TagClass: "電腦科學"},
                        { TagClassID: 2, TagClass: "數學" },
                        { TagClassID: 3, TagClass: "醫學" },
                    ],
                    Tags: [
                        { TagClassID: 1, TagID: 1, TagName: "C#" },
                        { TagClassID: 1, TagID: 2, TagName: "JavaScript" },
                        { TagClassID: 1, TagID: 3, TagName: "Azure" },
                        { TagClassID: 2, TagID: 4, TagName: "高等微積分" },
                        { TagClassID: 2, TagID: 5, TagName: "複變數函數" },
                        { TagClassID: 3, TagID: 6, TagName: "肛腸科" },
                        { TagClassID: 3, TagID: 7, TagName: "精神科" },
                    ],
                };
            },
        
            computed: {
                totalPage() {
                    return Math.ceil(this.Resume.length / this.perpage)
                    //Math.ceil()取最小整數
                },
                pageStart() {
                    return (this.currentPage - 1) * this.perpage
                    //取得該頁第一個值的index
                },
                pageEnd() {
                    return this.currentPage * this.perpage
                    //取得該頁最後一個值的index
                },
                
            },
            methods: {
                setPage(page) {
                    if (page <= 0 || page > this.totalPage) {
                        return
                    }
                    this.currentPage = page
                },
                ifsex(item) {
                    if (item.sex == true) {
                        this.checked = true
                    }
                    this.checked = false
                },
                mergeID(item) {
                    let str = item.name.replace(/\s/g, "");
                    let num = item.resumeID;
                    strID = str + num;
                    return strID;
                },
                filterTagClass:function(ClassID) {
                        let _this = this;
                    return _this.Tags.filter(function (item) {
                        return item.TagClassID == ClassID;
                        });
                },
                ReturnhashtagID:function(item){
                    return `#${item.TagClass}`;
                },
                changeTagNameTo: function (TagName) {
                    let _this = this;
                    return `${TagName}BindID`;
                },
                ResumeInformation: function () {
                    fetch("/Candidates/Resume/ResumeResult", {
                        headers: {
                            "content-type": "multipart/form-data"
                        },
                        method:"POST",
                    }).then(response=>{
                        return response.json();
                    }).then(data=> {
                        return this.Resume = data
                    }).catch(err=>{
                        alert(JSON.stringify(err))
                    })
                },
                CreateNewResume:function(){
                    let _this = this;

                    // let form = new FormData()
                    // form.append("Address", _this.hopeaddress);
                    // form.append("Title", _this.ResumeName);
                    // form.append("WorkExperience", _this.WorkExperience);
                    // form.append("Autobiography", _this.Autobiography);
                    // form.append("ReleaseYN", _this.ReleaseYN);
                    // form.append("ResumeId",0 );
                    let request = {};
                    request.Address = _this.hopeaddress;
                    request.Title = _this.ResumeName;
                    request.WorkExperience = _this.WorkExperience;
                    request.Autobiography = _this.Autobiography;
                    request.ReleaseYN = _this.ReleaseYN;
                    fetch("/Candidates/Resume/CreateReasumes", {
                        method: "POST",
                        headers: {
                            "content-type": "application/json",  //告訴伺服器我們發送的是 JSON 格式的數據。
                        },
                        body: JSON.stringify(request)
                    }).then(response => {
                        return response.json()
                    }).then(data => {
                        csonsole.log( data)
                    }).catch(err => {
                        console.log(JSON.stringify(err))
                    })
                }
            },
            watch:{

            },
            mounted:function(){
                this.ResumeInformation();
            }
        };
        let app = Vue.createApp(VueApp).mount("#ResumeApp");
    </script>

