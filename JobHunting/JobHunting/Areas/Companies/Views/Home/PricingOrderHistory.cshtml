@{
    ViewData["Title"] = "會員中心";
}


<div class="col-8 mt-4 mx-auto" style="justify-content: center">
    <h3 class="mb-4" style="text-align:center">訂單紀錄</h3>
</div>

<div class="container tableOutside" id="app">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <td>訂單ID</td>
                <td>公司名稱</td>
                <td>統一編號</td>
                <td>方案名稱</td>
                <td>價格</td>
                <td>訂購日期</td>
                <td>付款狀態</td>
            </tr>
        </thead>
        <tbody>
            <tr v-for="item in order">
                <td>{{item.orderID}}</td>
                <td>{{item.companyName}}</td>
                <td>{{item.guiNumber}}</td>
                <td>{{item.title}}</td>
                <td>{{item.price}}</td>
                <td>{{item.orderDate}}</td>
                <td>{{item.status}}</td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts
{
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script>
        Vue.createApp({
        data() {
            return {
                order:[],
            }
        },
        computed:{},
        methods:{
            Company: function (){

                    fetch("/Companies/Home/IndexJson", {
                        method: "GET",
                    }).then(response => {
                        return response.json();
                    })
                    .then(data => {
                        return this.order=data
                        
                    }).catch(err => {
                            alert(JSON.stringify(err))
                    })
                },
                
            
        },
        mounted(){this.Company()},
    }).mount("#app");
    </script>
    
}

