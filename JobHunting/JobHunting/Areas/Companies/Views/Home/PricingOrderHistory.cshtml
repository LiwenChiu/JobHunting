@{
    ViewData["Title"] = "會員中心";
}


<div class="col-8 mt-4 mx-auto" style="justify-content: center">
    <h3 class="mb-4" style="text-align:center">訂單紀錄</h3>
</div>

<div class="container tableOutside ">


    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <td>訂單ID</td>
                <td>公司名稱</td>
                <td>統一編號</td>
                <td>方案名稱</td>
                <td>價格</td>
                <td>訂購日期</td>
                <td>付款狀態</td>
            </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/lib/datatables/js/jquery.datatables.min.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/fixedheader/3.3.2/js/dataTables.fixedHeader.min.js"></script>
    <script>
        $(document).ready(function () {
            alert("ready");
            $("table").dataTable({
                ajax: {
                    type: "GET",
                    url: "/Companies/CompanyOrders/IndexJson",
                    dataSrc: function (data) {
                        return data;
                    },
                },
                columns: [
                    { "data": "orderID", "width": "10%" },
                    { "data": "companyName", "width": "10%" },
                    { "data": "guiNumber", "width": "10%" },
                    { "data": "planTitle", "width": "10%" },
                    { "data": "price", "width": "10%" },
                    { "data": "orderDate", "width": "10%" },
                    { "data": "status", "width": "10%" },
                ],
                fixedHeader: {
                    header: false
                },
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.1.3/i18n/zh-HANT.json',
                },
            });
        });
    </script>
}

